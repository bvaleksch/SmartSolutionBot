# Async SQLAlchemy connection string (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/smart_solution_db

# Language name that must exist in the `language` table
DEFAULT_LANGUAGE=english

# Comma-separated Telegram usernames allowed to interact with the bot; leave blank to disable
WHITELIST=admin_user,judge_user

# Bot token obtained from BotFather
BOT_TOKEN=123456789:ABCDEF_example_token

# Rate limiting configuration
MAX_REQUESTS=10
BAN_THRESHOLD=12
BAN_DURATION_SECONDS=900
PERIOD=5

# Max uploaded document size (MB) before the bot splits it for admins
SUBMISSION_FILE_PART_LIMIT_MB=48
